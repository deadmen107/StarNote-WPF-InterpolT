                                <dxg:GridColumn x:Name="kolonFirmaadı"           Header="FİRMA ADI"            Binding="{Binding Path=Firmaadı}"              FieldName="31"                 FixedWidth="true"   Width="100" ><dxg:GridColumn.EditSettings> <dxe:TextEditSettings TextWrapping="Wrap"/></dxg:GridColumn.EditSettings></dxg:GridColumn>
                                <dxg:GridColumn x:Name="kolonFirmaadresi"        Header="FİRMA ADRESİ"         Binding="{Binding Path=Firmaadresi}"           FieldName="32"                 FixedWidth="true"   Width="100" ><dxg:GridColumn.EditSettings> <dxe:TextEditSettings TextWrapping="Wrap"/></dxg:GridColumn.EditSettings></dxg:GridColumn>
