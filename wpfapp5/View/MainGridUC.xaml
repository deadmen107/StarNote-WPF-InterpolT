                                <dxg:GridColumn x:Name="kolonBeklenentutar"      Header="BEKLENEN TUTAR"       Binding="{Binding Path=Beklenentutar}"         FieldName="37"                 FixedWidth="true"   Width="130" ><dxg:GridColumn.EditSettings> <dxe:TextEditSettings TextWrapping="Wrap"/></dxg:GridColumn.EditSettings></dxg:GridColumn>
                                <dxg:GridColumn x:Name="kolonKaraktersayı"       Header="KARAKTER SAYISI"      Binding="{Binding Path=Karaktersayı}"          FieldName="12"                 FixedWidth="true"   Width="100" ><dxg:GridColumn.EditSettings> <dxe:TextEditSettings TextWrapping="Wrap"/></dxg:GridColumn.EditSettings></dxg:GridColumn>
                                <dxg:GridColumn x:Name="kolonSatırsayı"          Header="SAYFA SAYISI"         Binding="{Binding Path=Satırsayı}"             FieldName="13"                 FixedWidth="true"   Width="100" ><dxg:GridColumn.EditSettings> <dxe:TextEditSettings TextWrapping="Wrap"/></dxg:GridColumn.EditSettings></dxg:GridColumn>
                                <dxg:GridColumn x:Name="kolonKelimesayı"         Header="KELİME SAYISI"        Binding="{Binding Path=Kelimesayı}"            FieldName="14"                 FixedWidth="true"   Width="100" ><dxg:GridColumn.EditSettings> <dxe:TextEditSettings TextWrapping="Wrap"/></dxg:GridColumn.EditSettings></dxg:GridColumn>
                                <dxg:GridColumn x:Name="kolonTavsiyeedilentutar" Header="TAVSİYE EDİLEN TUTAR" Binding="{Binding Path=Tavsiyeedilentutar}"    FieldName="15"                 FixedWidth="true"   Width="140" ><dxg:GridColumn.EditSettings> <dxe:TextEditSettings TextWrapping="Wrap"/></dxg:GridColumn.EditSettings></dxg:GridColumn>
                                <dxg:GridColumn x:Name="kolonÖnerilenbirim"      Header="TAVSİYE EDİLEN BİRİM" Binding="{Binding Path=Önerilenbirim}"         FieldName="16"                 FixedWidth="true"   Width="130" ><dxg:GridColumn.EditSettings> <dxe:TextEditSettings TextWrapping="Wrap"/></dxg:GridColumn.EditSettings></dxg:GridColumn>
                                <dxg:GridColumn x:Name="kolonÖnerilentutar"      Header="ÖNERİLEN TUTAR"       Binding="{Binding Path=Önerilentutar}"         FieldName="17"                 FixedWidth="true"   Width="130" ><dxg:GridColumn.EditSettings> <dxe:TextEditSettings TextWrapping="Wrap"/></dxg:GridColumn.EditSettings></dxg:GridColumn>
                                <dxg:GridColumn x:Name="kolonKdvoran"            Header="KDV ORANI"            Binding="{Binding Path=Kdvoran}"               FieldName="18"                 FixedWidth="true"   Width="100" ><dxg:GridColumn.EditSettings> <dxe:TextEditSettings TextWrapping="Wrap"/></dxg:GridColumn.EditSettings></dxg:GridColumn>
                                <dxg:GridColumn x:Name="kolonMetod"              Header="METOD"                Binding="{Binding Path=Metod}"                 FieldName="19"                 FixedWidth="true"   Width="100" ><dxg:GridColumn.EditSettings> <dxe:TextEditSettings TextWrapping="Wrap"/></dxg:GridColumn.EditSettings></dxg:GridColumn>
                                <dxg:GridColumn x:Name="kolonÖdemeyöntemi"       Header="ÖDEME YÖNTEMİ"        Binding="{Binding Path=Ödemeyöntemi}"          FieldName="20"                 FixedWidth="true"   Width="130" ><dxg:GridColumn.EditSettings> <dxe:TextEditSettings TextWrapping="Wrap"/></dxg:GridColumn.EditSettings></dxg:GridColumn>
                                <dxg:GridColumn x:Name="kolonDurum"              Header="DURUM"                Binding="{Binding Path=Durum}"                 FieldName="21"  IsSmart="True" FixedWidth="true"   Width="100" ><dxg:GridColumn.EditSettings> <dxe:TextEditSettings TextWrapping="Wrap"/></dxg:GridColumn.EditSettings></dxg:GridColumn>
                                <dxg:GridColumn x:Name="kolonAcıklama"           Header="AÇIKLAMA"             Binding="{Binding Path=Acıklama}"              FieldName="22"                 FixedWidth="true"   Width="100" ><dxg:GridColumn.EditSettings> <dxe:TextEditSettings TextWrapping="Wrap"/></dxg:GridColumn.EditSettings></dxg:GridColumn>
                                <dxg:GridColumn x:Name="kolonTelefon"            Header="TELEFON"              Binding="{Binding Path=Telefon}"               FieldName="23"                 FixedWidth="true"   Width="100" ><dxg:GridColumn.EditSettings> <dxe:TextEditSettings TextWrapping="Wrap"/></dxg:GridColumn.EditSettings></dxg:GridColumn>
                                <dxg:GridColumn x:Name="kolonTckimlik"           Header="TC KİMLİK NO"         Binding="{Binding Path=Tckimlik}"              FieldName="24"                 FixedWidth="true"   Width="100" ><dxg:GridColumn.EditSettings> <dxe:TextEditSettings TextWrapping="Wrap"/></dxg:GridColumn.EditSettings></dxg:GridColumn>
                                <dxg:GridColumn x:Name="kolonEposta"             Header="E POSTA"              Binding="{Binding Path=Eposta}"                FieldName="25"                 FixedWidth="true"   Width="100" ><dxg:GridColumn.EditSettings> <dxe:TextEditSettings TextWrapping="Wrap"/></dxg:GridColumn.EditSettings></dxg:GridColumn>
                                <dxg:GridColumn x:Name="kolonŞehir"              Header="ŞEHİR"                Binding="{Binding Path=Şehir}"                 FieldName="26"                 FixedWidth="true"   Width="100" ><dxg:GridColumn.EditSettings> <dxe:TextEditSettings TextWrapping="Wrap"/></dxg:GridColumn.EditSettings></dxg:GridColumn>
                                <dxg:GridColumn x:Name="kolonİlçe"               Header="İLÇE"                 Binding="{Binding Path=İlçe}"                  FieldName="27"                 FixedWidth="true"   Width="100" ><dxg:GridColumn.EditSettings> <dxe:TextEditSettings TextWrapping="Wrap"/></dxg:GridColumn.EditSettings></dxg:GridColumn>
