                                    <dxg:GridColumn x:Name="kolon1Id"                  Header="ID"                   Binding="{Binding Path=Id}"                 FieldName="1" ReadOnly="True"  FixedWidth="true"   Width="50"  ><dxg:GridColumn.EditSettings> <dxe:TextEditSettings TextWrapping="Wrap"/></dxg:GridColumn.EditSettings></dxg:GridColumn>
