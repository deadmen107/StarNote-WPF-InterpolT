<UserControl  x:Class="StarNote.View.MainGridUC"
             xmlns:local="clr-namespace:StarNote.View"
             xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core" 
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"     
             xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors" 
             xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid" 
             xmlns:dxgt="http://schemas.devexpress.com/winfx/2008/xaml/grid/themekeys"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:dxb="http://schemas.devexpress.com/winfx/2008/xaml/bars"
             mc:Ignorable="d" Margin="0" Padding="0"    
             LostFocus="UserControl_LostFocus" GotFocus="UserControl_GotFocus" 
             >
    <UserControl.Resources>
        <ResourceDictionary Source="/StarNote;component/Resources/ButtonResources.xaml">
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Popup  x:Name="popup" Width="640"  MaxHeight="400"  
                           StaysOpen="true"
                           Placement="MousePoint"              
                           AllowsTransparency="True"  
                           PopupAnimation="Slide"  
                           HorizontalOffset="150"  
                           VerticalOffset="100"                           
                           >
            <Border  BorderThickness="2" BorderBrush="Black" CornerRadius="0" Padding="0">
                <ScrollViewer   VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto"  >
                    <ScrollViewer.Resources>
                        <Style x:Key="{x:Type ScrollBar}" TargetType="{x:Type ScrollBar}">
                            <Setter Property="Stylus.IsFlicksEnabled" Value="True" />
                            <Style.Triggers>
                                <Trigger Property="Orientation" Value="Horizontal">
                                    <Setter Property="Height" Value="7" />
                                    <Setter Property="MinHeight" Value="7" />
                                </Trigger>
                                <Trigger Property="Orientation" Value="Vertical">
                                    <Setter Property="Width" Value="12" />
                                    <Setter Property="MinWidth" Value="12" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </ScrollViewer.Resources>
                    <Grid Background="White" x:Name="gridpopup">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition x:Name="popupcolumn1" Width="0"/>
                            <ColumnDefinition x:Name="popupcolumn2" Width="0"/>
                        </Grid.ColumnDefinitions>
                    </Grid>
                </ScrollViewer>
            </Border>
        </Popup>
        <dx:DXTabControl x:Name="tabcontrol" SelectedIndex="0">
            <dx:DXTabControl.View>
                <dx:TabControlMultiLineView HeaderLocation="None"/>
            </dx:DXTabControl.View>
           
            <dx:DXTabItem Name="grid" >
                <dx:DXTabControl  SelectionChanged="Özelfirmasecim_SelectionChanged"  x:Name="özelfirmasecim">
                    <dx:DXTabControl.View>
                        <dx:TabControlMultiLineView HeaderLocation="Top"/>
                    </dx:DXTabControl.View>
                    <dx:DXTabItem Tag="0"  x:Name="adliye" Header="Adileyeler ">
                        <Grid  VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="50"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Grid Grid.Row="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="70"/>
                                    <ColumnDefinition Width="70"/>
                                    <ColumnDefinition Width="70"/>
                                    <ColumnDefinition Width="130"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="40"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <Button  Content="{StaticResource btnsettings}" x:Name="buttonoutput" Grid.Row="1" Grid.Column="4" Width="120" Height="25" dxb:BarManager.MenuShowMouseButton="LeftButton">
                                    <dxb:BarManager.DXContextMenu>
                                        <dxb:PopupMenu Width="150">

                                            <dxb:PopupMenu.Items>

                                                <dxb:BarButtonItem
                                        x:Name="btnpdf"
                                Content="PDF ÇIKTI"                                     
                                Glyph="/Content/pdf.png"
                                ItemClick="Btnpdf_ItemClick" />
                                                <dxb:BarButtonItem
                                x:Name="btnxcel"
                                Content="Excel ÇIKTI"
                                Glyph="/Content/excel.png"
                                ItemClick="Btnxcel_ItemClick" />
                                                <dxb:BarButtonItem
                                x:Name="btnayar"
                                Content="Kolon ayar ekranı"
                                Glyph="/Content/settings mini.png"
                                ItemClick="Btnayar_ItemClick" />
                                                <!--<dxb:BarButtonItem
                                x:Name="btnlayoutsave"
                                Content="Kolon ayarlarını Kaydet"
                                Glyph="/Content/settings mini.png"
                                ItemClick="Btnlayoutsave_ItemClick" />-->
                                            </dxb:PopupMenu.Items>
                              
                                         
                                        </dxb:PopupMenu>

                                    </dxb:BarManager.DXContextMenu>

                                </Button>
                            </Grid>
                            <dxg:GridControl  x:Name="grdmain"  Grid.Row="1" SelectionMode="MultipleRow" ItemsSource="{Binding Mainlist,Mode=TwoWay}" CustomColumnDisplayText="Grdmain_CustomColumnDisplayText" MaxHeight="2000" MaxWidth="2000" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0,0,0,0"  
                                             dx:DXSerializer.SerializationID="grid" 
                         dx:DXSerializer.StoreLayoutMode="All" 
                                    
                         dxg:GridSerializationOptions.AddNewColumns="False" 
                         dxg:GridSerializationOptions.RemoveOldColumns="False">

                                <dxg:GridControl.View >

                                    <dxg:TableView x:Name="tableAcik" Tag="0" RowDoubleClick="TableAcik_RowDoubleClick"  AllowPerPixelScrolling="True" BestFitMode="AllRows" AutoWidth="True" ShowGroupPanel="False" ShowSearchPanelMode="Always" AllowEditing="False"  ShowTotalSummary="True" AllowConditionalFormattingManager="True" SearchPanelNullText="Kelime Arama">
                                        <dxg:TableView.RowCellMenuCustomizations>
                                            <dxb:BarButtonItem Tag="0" x:Name="btntercümerapor" Content="Tercüme Raporu Al"  ItemClick="Btntercümerapor_ItemClick"   />
                                            <dxb:BarButtonItem Tag="0" x:Name="btnbildiriücret" Content="Bildiri Ücret Makbuzu Al"  ItemClick="Btnbildiriücret_ItemClick"   />
                                        </dxg:TableView.RowCellMenuCustomizations>
                                        <dxg:TableView.FormatConditions>

                                            <dxg:FormatCondition Expression="[21]  != 'TAMAMLANDI'"  FieldName="21" ApplyToRow="True">
                                                <dx:Format Background="IndianRed"/>
                                            </dxg:FormatCondition>
                                            <dxg:FormatCondition Expression="[11]  == '0'"  FieldName="11" ApplyToRow="True">
                                                <dx:Format Background="IndianRed"/>
                                            </dxg:FormatCondition>


                                        </dxg:TableView.FormatConditions>
                                    </dxg:TableView>
                                </dxg:GridControl.View>

                                <dxg:GridControl.Columns>
                                <dxg:GridColumn x:Name="kolonId"                 Header="ID"                   Binding="{Binding Path=Id}"                    FieldName="1" ReadOnly="True"  FixedWidth="true"   Width="50"  ><dxg:GridColumn.EditSettings> <dxe:TextEditSettings TextWrapping="Wrap"/></dxg:GridColumn.EditSettings></dxg:GridColumn>
                                <dxg:GridColumn x:Name="kolonJoborder"           Header="DOSYA NO"             Binding="{Binding Path=Joborder}"              FieldName="2"                  FixedWidth="true"   Width="120" ><dxg:GridColumn.EditSettings> <dxe:TextEditSettings TextWrapping="Wrap"/></dxg:GridColumn.EditSettings></dxg:GridColumn>
                                <dxg:GridColumn x:Name="kolonTür"                Header="MÜŞTERİ TÜRÜ"         Binding="{Binding Path=Tür}"                   FieldName="3"                  FixedWidth="true"   Width="160" ><dxg:GridColumn.EditSettings> <dxe:TextEditSettings TextWrapping="Wrap"/></dxg:GridColumn.EditSettings></dxg:GridColumn>
                                <dxg:GridColumn x:Name="kolonTürdetay"           Header="MAHKEME TÜRÜ"         Binding="{Binding Path=Türdetay}"              FieldName="34"                 FixedWidth="true"   Width="160" ><dxg:GridColumn.EditSettings> <dxe:TextEditSettings TextWrapping="Wrap"/></dxg:GridColumn.EditSettings></dxg:GridColumn>
                                <dxg:GridColumn x:Name="kolonKayıtdetay"         Header="ESAS NO"              Binding="{Binding Path=Kayıtdetay}"            FieldName="35"                 FixedWidth="true"   Width="130" ><dxg:GridColumn.EditSettings> <dxe:TextEditSettings TextWrapping="Wrap"/></dxg:GridColumn.EditSettings></dxg:GridColumn>
                                <dxg:GridColumn x:Name="kolonKayıtdetay1"        Header="KARAR NO"             Binding="{Binding Path=Kayıtdetay1}"           FieldName="38"                 FixedWidth="true"   Width="160" ><dxg:GridColumn.EditSettings> <dxe:TextEditSettings TextWrapping="Wrap"/></dxg:GridColumn.EditSettings></dxg:GridColumn>
                                <dxg:GridColumn x:Name="kolonKayıtdetay2"        Header="TALİMAT NO"           Binding="{Binding Path=Kayıtdetay2}"           FieldName="39"                 FixedWidth="true"   Width="130" ><dxg:GridColumn.EditSettings> <dxe:TextEditSettings TextWrapping="Wrap"/></dxg:GridColumn.EditSettings></dxg:GridColumn>                                     
